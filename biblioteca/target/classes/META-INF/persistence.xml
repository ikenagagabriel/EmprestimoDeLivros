<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="default"> <!-- nome da unidade de persistência-->
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/biblioteca"/> <!-- biblioteca é o nome do banco de dados no postgree, você deve criar o bd no postgree-->
            <property name="jakarta.persistence.jdbc.user" value="ufabc"/> <!-- nome do usuário no bd-->
            <property name="jakarta.persistence.jdbc.password" value="ufabc"/> <!-- senha do usuário no bd-->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/> <!-- drop-and-create irá apagar e criar novas tabelas a cada execução. Alterar para create na aplicação final-->
        </properties>
    </persistence-unit>
</persistence>